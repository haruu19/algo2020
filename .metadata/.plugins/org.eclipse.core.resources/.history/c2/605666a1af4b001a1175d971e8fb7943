package day7;

public class A {
	public static void main(String[] args) {
		STree t = new STree();
		t.setRoot('A');
		t.addLeft('A','B');
	}
	static class STree{
		Node root;
		public void setRoot(char ch) {
			Node temp = new Node(ch);
			root = temp;

		}
		void addLeft(char parent, char data) {
			Node p = search(root, parent);
			if(p==null) {
				System.out.println("못찾음");
				return;
			}
			Node temp = new Node(data);
			p.left = temp;
		}
		
		static Node search(Node p, char parent) {
			Node nLeft = p.left;
			Node nRight = p.right;
			if(nLeft==null&nRight==null) {
				return null;
			}
			if(nLeft!=null&nRight!=null) {
				if(nLeft.data==parent)
					return nLeft;
				if(nRight.data==parent)
					return nRight;
				Node t1 = search(nLeft, parent);
				Node t2 = search(nRight, parent);
				if(t1==null&&t2==null) {
					return null;
				}else if(t1==null) {
					return t2;
				}else {
					return t1;
				}
			}
			if(nLeft!=null) {
				if(nLeft.data==parent) {
					return nLeft;
				}
				return search(nLeft,parent);
			}
			if(nRight!=null) {
				if(nRight.data==parent) {
					return nRight;
				}
				return search(nRight,parent);
			}
			return null;
		}
		
	}
	
	static class Node{
		char data;
		Node left;
		Node right;
		public Node(char data) {
			super();
			this.data = data;
		}
		
		
	}

	
}
