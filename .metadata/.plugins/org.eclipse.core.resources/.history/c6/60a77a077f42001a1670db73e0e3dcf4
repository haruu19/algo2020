import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.util.Scanner;
import java.util.Stack;

public class Tower {
	static int N;
	static int[] a;
	static int[] b;
	static int[] c;
	public static void main(String[] args) throws FileNotFoundException {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(new FileInputStream("input.txt"));
		N = sc.nextInt();
		a = new int[N];
		b = new int[N+1];
		c = new int[N];
		for(int i=0;i<N;i++)
			a[i] = sc.nextInt();
		method();
		
	}
	static void method() {
		Stack<Integer> stack = new Stack<Integer>();
		for(int i : a)
			stack.push(i);
		
		while(!stack.isEmpty()) {
			int idx = stack.size();
			int t1 = stack.pop();
			if(stack.isEmpty()) {
				b[idx] = 0;
				break;
			}
			if(t1<stack.peek()) {
				b[idx] = stack.size();
				continue;
			}else {
				int t2;
				int cnt = 0;
				while(true) {
					t2 = stack.pop();
					c[cnt]=t2;
					cnt++;
					if(t1<stack.peek()) {
						b[idx] = stack.size();
						for(int i=cnt-1;i>=0;i--) {
							stack.push(c[i]);
						}
						break;
					}
					if(stack.isEmpty()) {
						b[idx] = 0;
						for(int i=cnt-1;i>=0;i--) {
							stack.push(c[i]);
						}
						break;
					}
				}
				continue;
			}
		}
		for(int i=1;i<b.length;i++) {
			System.out.print(b[i]+" ");
		}
		
	}
}
