import java.util.Scanner;

public class boj_7576 {
	static int M,N;
	static int[][] a;
	static int[] dx = {1,-1,0,0};
	static int[] dy = {0,0,1,-1};
	static boolean[][] cur;//현재 처리할 토마토 체크
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		M = sc.nextInt();
		N = sc.nextInt();
		a = new int[N][M];
		cur = new boolean[N][M];
		for(int i=0;i<N;i++) {
			for(int j=0;j<M;j++) {
				a[i][j]=sc.nextInt();
				if(a[i][j]==1)
					cur[i][j]=true;
			}
		}
		int count = 0;
		while(true) {
			if(hasNoZero())
				break;
			for(int i=0;i<N;i++) {
				for(int j=0;j<M;j++) {
					if(a[i][j]==1&&cur[i][j]) {
						method(i,j);
						cur[i][j]=false;
					}
				}
			}
			count++;
		}
	}
	
	static void method(int x, int y) {
		int nx,ny;
		for(int i=0;i<4;i++) {
			nx = x+dx[i];
			ny = y+dy[i];
			if(isOut(nx,ny)||a[nx][ny]==-1||a[nx][ny]==1)
				continue;
			if(a[nx][ny]==0) {
				a[nx][ny]=1;
				cur[nx][ny]=true;
			}
		}
	}
	
	static boolean isOut(int x, int y) {
		return (x<0||x>=N||y<0||y>=M);
	}
	
	static boolean hasNoZero() {
		for(int i=0;i<N;i++) {
			for(int j=0;j<M;j++) {
				if(a[i][j]==0)
					return false;
			}
		}
		return true;
	}
}
