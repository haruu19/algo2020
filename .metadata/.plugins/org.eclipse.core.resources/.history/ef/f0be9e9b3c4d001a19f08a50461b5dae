package im;

import java.util.Arrays;
import java.util.Scanner;

public class boj2491 {
	static int N;
	static int[] a;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		N = sc.nextInt();
		a = new int[N];
		for(int i=0;i<N;i++) {
			a[i] = sc.nextInt();
		}
		int max = 0;
		int count = 1;
		int flag = 0;
		for(int i=0;i<N-1;i++) {
			if(a[i+1]>a[i]&&(flag==0||flag==1)) {//뒤>앞 플래그 같은경우
				count++;
				flag=1;
				continue;
			}
			if(a[i+1]<a[i]&&(flag==0||flag==-1)) {//뒤<앞 플래그 같은경우
				count++;
				flag=-1;
				continue;
			}
			if(a[i+1]>a[i]&&flag==-1) {
				count++;
				max=Math.max(max, count);
				count=1;
				flag=1;
				continue;
			}
			if(a[i+1]<a[i]&&flag==1) {
				count++;
				max=Math.max(max, count);
				count=1;
				flag=-1;
				continue;
			}
			count++;
		}
		max = Math.max(max, count);
		System.out.println(max);
	}
}
